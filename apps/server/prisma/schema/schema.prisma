generator client {
  provider = "prisma-client"
  output   = "../generated"
  moduleFormat = "esm"
  runtime = "nodejs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PromptEnhancement {
  id        String   @id @default(cuid())
  userId    String?  // Optional user identification
  rawPrompt String   // Original user prompt
  enhanced  String   // AI-enhanced prompt
  model     String?  // AI model used (e.g., "gpt-4o-mini")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("prompt_enhancements")
}
